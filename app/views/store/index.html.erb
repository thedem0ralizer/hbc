<% if notice %>
  <aside id="notice"><%= notice %></aside>
<% end %>

<h1>Soap Store</h1>

<ul class="catalog">
  <% cache @products do %>
    <% @products.each do |product| %>
      <% cache product do %>
        <li>
          <h2><%= product.name %></h2>
          <p>
            <%= sanitize(product.description) %>
          </p>
          <div class="price">
            <%= number_to_currency(product.price_in_dollars) %>
            <%= button_to 'Add to Cart', line_items_path(product_id: product), remote: true %>
          </div>
        </li>
      <% end %>
    <% end %>
  <% end %>
</ul>